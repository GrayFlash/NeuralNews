<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <!-- Make site responsive on mobile/tablet -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
<link rel="stylesheet" href="/css/home.css">

<body>


    <!-- Navbar Section -->

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#" style="padding-left: 40px; color: #2109fce6; font-size: 22px;">Neural_News</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/" style=" color: #2109fce6; font-size: 18px;">Home</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right" style=" margin-right: 70px;">
                <% if(!currentUser){ %>
                <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a class="nav-link"
                        href="/login" style="font-size: 18px;">Login</a></li>
                <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a
                        class="nav-link" href="/signup" style="font-size: 18px;">Sign Up</a></li>
                <% } else { %>
                <li><a class="nav-link" href="#" style="font-size: 18px;">Signed In As <%= currentUser.username %></a>
                </li>
                <li><a class="nav-link" href="/logout" style="font-size: 18px;">Logout</a></li>
                <% } %>
            </ul>
        </div>
    </nav>

    <!-- Navbar Section Ends -->



    <!-- News Section -->
    <div class="container" style="margin-top: 30px;">
        <center>
            <img src="/images/undraw_content_vbqo.svg" style="width: 65%; height: 65%;">
            <h1 style="color:#104FBD; font-weight: bold; font-size: 35px; padding-bottom: 120px; padding-top: 40px;">
                Welcome to Neural
                NewsðŸ“°</h1>
        </center>


        <% for(var i=0;i<10;i++){ %>
        <div class="row" style="margin-bottom: 65px;">
            <div class="col-xl-2 col-4 d-flex justify-content-end">
                <img src="<%= info.Image_Url[i] %>" style="height: 130px; width: 130px; padding-top: 10px;">
            </div>

            <div class="col-xl-10 col-8 align-self-center">
                <p class="lead" style="font-weight: 600; margin-bottom: 2px"> <a href="/news2/<%=i%>">
                        <%= info.Title[i] %> </a> </p>
                <p style="font-weight: 400;  margin-bottom: 6px"> <%= info.Brief_Intro[i] %> </p>

                <div class="row ml-1 d-flex justify-content-between">
                    <% if(info.label[i]<=30){ %>
                    <h5 style="font-weight: 600; color: red; "> Accuracy : <%= info.label[i].toFixed(2) %> </h5>
                    <% } 
                 else if(info.label[i]<=70){ %>
                    <h5 style="font-weight: 600; color: orange; "> Accuracy : <%= info.label[i].toFixed(2) %> </h5>
                    <% } 
                else { %>
                    <h5 style="font-weight: 600; color: green; "> Accuracy : <%= info.label[i].toFixed(2) %> </h5>
                    <% } %>
                    <a href="/news2/<%=i%>"><button class="btn btn-sm btn-success">Comment</button></a>
                </div>
            </div>

        </div>
        <% } %>
    </div>

    <!-- News Section Ends -->


    <!-- --------- Pagination--------------- -->

    <div class="pagination justify-content-center">
        <a>&laquo;</a>
        <a href="/">1</a>
        <a class="active" href="/home2">2</a>
        <a>&raquo;</a>
    </div>

    <!-- Pagination End --------------- -->



    <!-- Footer -->
    <div>
        <center>
            <p style="padding-top: 100px; padding-bottom: 30px; font-size: 20px;">Made with <i class="fa fa-heart"
                    aria-hidden="true" style="color: red;"></i>
                for Hack Gujarat</p>
        </center>
    </div>
    <!-- Footer Ends -->







    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous">
        </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
        integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous">
        </script>

</body>

</html>